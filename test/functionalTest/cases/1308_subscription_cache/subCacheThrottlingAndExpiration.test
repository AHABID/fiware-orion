# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Subscription Cache Throttling and expiration

--SHELL-INIT--
dbInit CB
dbInit ftest-t1
brokerStart CB 0 IPv4 -multiservice -subCacheIval 5
accumulatorStart

--SHELL--

#
# 01. Create subscription for s0.* entities, attribute A, w/o tenant, expiration time 5 secs
# 02. Create entity s01 w/ attr A w/o tenant
# 03. Modify entity s01 w/ attr A w/o tenant - notification lost by throttling
# 04. Modify entity s01 w/ attr A w/o tenant - notification lost by throttling
# 05. Wait 3 secs so that the throttling of 2 secs is OK
# 06. Modify entity s01 w/ attr A w/o tenant - notification NOT lost by throttling
# 07. Modify entity s01 w/ attr A w/o tenant - notification lost by throttling
# 08. Wait 3 secs more, to make subscription expire
# 09. Modify entity s01 w/ attr A w/o tenant - no notification as expired
# 10. Dump accumulator - see two notifications
#


echo "01. Create subscription for s0.* entities, attribute A, w/o tenant, expiration time 5 secs"
echo "=========================================================================================="
payload='{
  "entities": [
    {
      "isPattern": "true",
      "id": "s0.*"
    }
  ],
  "reference": "http://localhost:'${LISTENER_PORT}'/notify",
  "duration": "PT5S",
  "throttling": "PT2S",
  "notifyConditions": [
    {
      "type": "ONCHANGE",
      "condValues": [ "A" ]
    }
  ]
}'
orionCurl --url /v1/subscribeContext --payload "$payload" --json
echo
echo


echo "02. Create subscription for s1.* entities, attribute A, for tenant t1"
echo "====================================================================="
payload='{
  "entities": [
    {
      "isPattern": "true",
      "id": "s1.*"
    }
  ],
  "reference" : "http://localhost:'${LISTENER_PORT}'/notify",
  "duration": "PT10S",
  "notifyConditions": [
    {
      "type": "ONCHANGE",
      "condValues": [ "A" ]
    }
  ]
}'
orionCurl --url /v1/subscribeContext --payload "$payload" --json --tenant t1
echo
echo


echo "03. Create entity s01 w/ attr A w/o tenant"
echo "=========================================="
payload='{
  "id": "s01",
  "A": "03. Creation"
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "04. Modify entity s01 w/ attr A w/o tenant - notification lost by throttling"
echo "============================================================================"
payload='{ "A": "04. notification lost by throttling" }'
orionCurl --url /v2/entities/s01 -X PUT --payload "$payload" --json
echo
echo


echo "05. Modify entity s01 w/ attr A w/o tenant - notification lost by throttling"
echo "============================================================================"
payload='{ "A": "05. notification lost by throttling" }'
orionCurl --url /v2/entities/s01 -X PUT --payload "$payload" --json
echo
echo


echo "06. Wait 3 secs so that the throttling of 2 secs is OK"
echo "======================================================"
sleep 3
echo
echo


echo "07. Modify entity s01 w/ attr A w/o tenant - notification NOT lost by throttling"
echo "================================================================================"
payload='{ "A": "07. Modification" }'
orionCurl --url /v2/entities/s01 -X PUT --payload "$payload" --json
echo
echo


echo "08. Modify entity s01 w/ attr A=5 w/o tenant - notification lost by throttling"
echo "=============================================================================="
payload='{ "A": "08. notification lost by throttling" }'
orionCurl --url /v2/entities/s01 -X PUT --payload "$payload" --json
echo
echo


echo "09. Wait 3 secs more, to make subscription expire"
echo "================================================="
sleep 3
echo
echo


echo "10. Modify entity s01 w/ attr A w/o tenant - no notification as expired"
echo "======================================================================="
payload='{ "A": "10. no notification as expired" }'
orionCurl --url /v2/entities/s01 -X PUT --payload "$payload" --json
echo
echo


echo "11. Dump accumulator - see two notifications"
echo "============================================"
accumulatorDump
echo
echo


