# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entities V2 with Pagination by Id

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v1/updateContext, creating 5 entities
# 02. GET /v2/entities?id=E1,E2&type=T1
# 03. GET /v2/entities?id=E1&type=T3
#

echo "01. POST /v1/updateContext"
echo "=========================="
payload='{
  "contextElements": [
    {
      "id":   "E1",
      "type": "T1"
    },
    {
      "id":   "E2",
      "type": "T1"
    },
    {
      "id":   "E3",
      "type": "T2"
    },
    {
      "id":   "E1",
      "type": "T3"
    },
    {
      "id":   "E2",
      "type": "T3"
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --json
echo
echo


echo "02. GET /v2/entities?id=E1,E2&type=T1"
echo "====================================="
orionCurl --url '/v2/entities?id=E1,E2&type=T1' --json
echo
echo


echo "03. GET /v2/entities?id=E1&type=T3"
echo "=================================="
orionCurl --url '/v2/entities?id=E1&type=T3' --json
echo
echo


--REGEXPECT--
