# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
broker version via REST
--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
# Note that we are assuming a fixed value of 0 for days, hours and minutes, assuming that this test
# is executed in less than one minute

echo "1: +++++++++++++++++++++++++++++"
curl localhost:${BROKER_PORT}/version 2> /dev/null | xmllint --format -
echo
echo "2: +++++++++++++++++++++++++++++"
curl localhost:${BROKER_PORT}/version --header "Accept: application/json"  2> /dev/null
echo
--REGEXPECT--
1: +++++++++++++++++++++++++++++
<?xml version="1.0"?>
<orion>
  <version>REGEX(.*)</version>
  <uptime>REGEX(.*)</uptime>
  <git_hash>REGEX(([0-9a-f]{40}|nogitversion))</git_hash>
  <compile_time>REGEX(.*)</compile_time>
  <compiled_by>REGEX(.*)</compiled_by>
  <compiled_in>REGEX(.*)</compiled_in>
</orion>

2: +++++++++++++++++++++++++++++
"orion" : {
  "version" : "REGEX(.*)",
  "uptime" : "REGEX(.*)",
  "git_hash" : "REGEX(([0-9a-f]{40}|nogitversion))",
  "compile_time" : "REGEX(.*)",
  "compiled_by" : "REGEX(.*)",
  "compiled_in" : "REGEX(.*)"
}

--TEARDOWN--
brokerStop CB
