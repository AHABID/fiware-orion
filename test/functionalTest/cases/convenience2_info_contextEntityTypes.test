--NAME--
Convenience2 contextEntityTypes test
--SHELL-INIT--
dbInit CB
brokerStart CB 0-255 IPV4
--SHELL--


echo "1. Listing of Entity Types. Response in XML"
orionCurl --url '/v1/contextTypes'
echo
echo


echo "2. Listing of Entity Types. Response in XML, with details=on"
orionCurl --url '/v1/contextTypes?details=on'
echo
echo


echo "3. Listing of Entity Types. Response in JSON"
orionCurl --url '/v1/contextTypes' --json # --noPayloadCheck
echo
echo


echo "4. Listing of Entity Types. Response in JSON, with details=on"
orionCurl --url '/v1/contextTypes?details=on' --json # --noPayloadCheck
echo
echo


echo "5. Listing of Entity Types. Response in Object-JSON"
orionCurl --url '/v1/contextTypes?attributesFormat=object' --json # --noPayloadCheck
echo
echo


echo "6. Listing of Entity Types. Response in Object-JSON, with details=on"
orionCurl --url '/v1/contextTypes?attributesFormat=object&details=on' --json # --noPayloadCheck
echo
echo


