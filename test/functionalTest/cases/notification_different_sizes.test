  "'<duration>PT1H</duration>
  <notifyConditions>
    <notifyCondition>
      <type>ONCHANGE</type>
      <condValueList>
        <condValue>A</condValue>
      </condValueList>
    </notifyCondition>
  </notifyConditions>
</subscribeContextRequest>'
orionCurl --url "$url" --payload "${payload}"
echo


sleep 1
echo "2: ++++++++++++++++++++"
# Close to the dynamic buffer limit (~7.9 MB)
url="/NGSI10/subscribeContext"
payload='<?xml version="1.0"?>
<subscribeContextRequest>
