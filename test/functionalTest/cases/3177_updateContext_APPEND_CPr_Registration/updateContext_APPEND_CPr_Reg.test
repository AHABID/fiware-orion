# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
updateContext actionType APPEND with Context Provider Registration

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Register CP.
#
echo "01. Register CP."
echo "========================================================================"
payload='{
  "contextRegistrations": [
    {
      "entities": [
        {
          "type": "Floor",
          "isPattern": "false",
          "id": "Floor1"
        }
      ],
      "attributes": [
        {
          "name": "temperature",
          "type": "degree",
          "isDomain": "false"
        }
      ],
      "providingApplication": "${Context_Provider_URL}"
    }
  ],
  "duration": "PT1H"
}'
orionCurl --url "/v1/registry/registerContext" --payload "$payload"
REG_ID=$(echo "$_response" | grep registrationId | awk -F\" '{ print $4}')

#
# 02. Creating an entity in CB with actionType APPEND by using NGSIv1 .
#
echo "02. Creating an entity in CB with actionType APPEND by using NGSIv1."
echo "========================================================================"
payload='{
    "contextElements": [
        {
            "type": "Floor",
            "isPattern": "false",
            "id": "Floor1",
            "attributes": [
                {
                    "name": "temperature",
					"type": "degree",
					"value": "12"
     			}
            ]
        }
    ],
    "updateAction": "APPEND"
}'
orionCurl --url "/v1/updateContext" --payload "$payload"

#
# 03. Query to CP: see nothing (that's ensures the APPEND wasn't forwarded).
#
echo "03. Query to CP: see nothing (that's ensures the APPEND wasn't forwarded)."
echo "========================================================================"
payload='{
    "entities": [
        {
            "type": "Floor",
            "isPattern": "false",
            "id": "Floor1"
        }
    ]
}'
orionCurl --url "/v1/queryContext" --payload "$payload"

#
# 04. Query to CB: see the entity (it was created locally).
#
echo "04. Query to CB: see the entity (it was created locally)."
echo "========================================================================"
payload='{
    "entities": [
        {
            "type": "Floor",
            "isPattern": "false",
            "id": "Floor1"
        }
    ]
}'
orionCurl --url "/v1/queryContext" --payload "$payload"

--REGEXPECT--
01. Register CP. 
========================================================================
HTTP/1.1 200 OK
Content-Length: 63
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "PT1H",
    "registrationId": "REGEX([0-9a-f]{24})"
}

02. Creating an entity in CB with actionType APPEND by using NGSIv1. 
========================================================================
HTTP/1.1 200 OK
Content-Length: 204
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "temperature",
                        "type": "degree",
                        "value": ""
                    }
                ],
                "id": "Floor1",
                "isPattern": "false",
                "type": "Floor"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


03. Query to CP: see nothing (that's ensures the APPEND wasn't forwarded). 
========================================================================
HTTP/1.1 200 OK
Content-Length: 70
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "404",
        "reasonPhrase": "No context element found"
    }
}

04. Query to CB: see the entity (it was created locally). 
========================================================================
HTTP/1.1 200 OK
Content-Length: 206
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "temperature",
                        "type": "degree",
                        "value": "12"
                    }
                ],
                "id": "Floor1",
                "isPattern": "false",
                "type": "Floor"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}

--TEARDOWN--
brokerStop CB
dbDrop CB
