echo "01a. Create sub1 for E1 with metadata: dateCreated"
echo "=================================================="
payload='{
    "subject": {
        "entities": [
            {
                "id": "E1",
                "type": "T"
            }
        ],
        "condition": {
            "attrs": [ ]
