            "metadata": {},
            "type": "StructuredValue",
            "value": [
                [
                    1,
                    1.1
                ],
                [
                    2.1,
                    2.2
                ]
            ]
        },
        "id": "E1",
        "type": "T"
    },
    {
        "A1": {
