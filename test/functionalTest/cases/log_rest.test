# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Log configuration via REST

--SHELL-INIT--
dbInit CB
brokerStart CB 1-2

--SHELL--
echo "=== 1. GET verbose level"
curl localhost:${BROKER_PORT}/log/verbose 2> /dev/null
echo
echo

echo "=== 2. PUT verbose level"
curl localhost:${BROKER_PORT}/log/verbose/5 -X PUT  2> /dev/null
echo
echo

echo "=== 3. GET verbose level"
curl localhost:${BROKER_PORT}/log/verbose  2> /dev/null
echo
echo

echo "=== 4. DELETE verbose level"
curl localhost:${BROKER_PORT}/log/verbose -X DELETE  2> /dev/null
echo
echo

echo "=== 5. GET verbose level"
curl localhost:${BROKER_PORT}/log/verbose  2> /dev/null
echo
echo


echo "=== 6. POST verbose level"
curl localhost:${BROKER_PORT}/log/verbose/5 -X POST --include  2> /dev/null
echo
echo


echo "=== 7. GET trace level"
curl localhost:${BROKER_PORT}/log/traceLevel  2> /dev/null
echo
echo


echo "=== 8. PUT trace level"
curl localhost:${BROKER_PORT}/log/trace/5-10 -X PUT  2> /dev/null
echo
echo


echo "=== 9. GET trace level"
curl localhost:${BROKER_PORT}/log/traceLevel  2> /dev/null
echo
echo


echo "=== 10. POST trace level"
curl localhost:${BROKER_PORT}/log/trace/101-102,105 -X POST --include  2> /dev/null
echo
echo


echo "=== 11. PUT trace level"
curl localhost:${BROKER_PORT}/log/traceLevel/19,21-25 -X PUT  2> /dev/null
echo
echo


echo "=== 12. GET trace level"
curl localhost:${BROKER_PORT}/log/trace  2> /dev/null
echo
echo


echo "=== 13. DELETE trace level"
curl localhost:${BROKER_PORT}/log/traceLevel/23 -X DELETE  2> /dev/null
echo
echo


echo "=== 14. GET trace level"
curl localhost:${BROKER_PORT}/log/traceLevel  2> /dev/null
echo
echo


echo "=== 15. DELETE trace level"
curl localhost:${BROKER_PORT}/log/traceLevel -X DELETE  2> /dev/null
echo
echo


echo "=== 16. GET trace level"
curl localhost:${BROKER_PORT}/log/traceLevel  2> /dev/null
echo
echo


--REGEXPECT--
=== 1. GET verbose level
<orion>
  <log>
    <verboseLevel>5</verboseLevel>
  </log>
</orion>


=== 2. PUT verbose level
<orion>
  <log>
    <verboseLevel>verbose level set to 5</verboseLevel>
  </log>
</orion>


=== 3. GET verbose level
<orion>
  <log>
    <verboseLevel>5</verboseLevel>
  </log>
</orion>


=== 4. DELETE verbose level
<orion>
  <log>
    <verboseLevel>all verbose levels reset</verboseLevel>
  </log>
</orion>


=== 5. GET verbose level
<orion>
  <log>
    <verboseLevel>0</verboseLevel>
  </log>
</orion>


=== 6. POST verbose level
HTTP/1.1 405 Method Not Allowed
Content-Length: 0
Allow: GET, PUT, DELETE
Date: REGEX(.*)



=== 7. GET trace level
<orion>
  <log>
    <tracelevels>1-2</tracelevels>
  </log>
</orion>


=== 8. PUT trace level
<orion>
  <log>
    <tracelevels>5-10</tracelevels>
  </log>
</orion>


=== 9. GET trace level
<orion>
  <log>
    <tracelevels>5-10</tracelevels>
  </log>
</orion>


=== 10. POST trace level
HTTP/1.1 405 Method Not Allowed
Content-Length: 0
Allow: POST, GET, PUT, DELETE
Date: REGEX(.*)



=== 11. PUT trace level
<orion>
  <log>
    <tracelevels>19,21-25</tracelevels>
  </log>
</orion>


=== 12. GET trace level
<orion>
  <log>
    <tracelevels>19, 21-25</tracelevels>
  </log>
</orion>


=== 13. DELETE trace level
<orion>
  <log>
    <tracelevels removed>23</tracelevels removed>
  </log>
</orion>


=== 14. GET trace level
<orion>
  <log>
    <tracelevels>19, 21-22, 24-25</tracelevels>
  </log>
</orion>


=== 15. DELETE trace level
<orion>
  <log>
    <tracelevels>all trace levels off</tracelevels>
  </log>
</orion>


=== 16. GET trace level
<orion>
  <log>
    <tracelevels>empty</tracelevels>
  </log>
</orion>


--TEARDOWN--
brokerStop CB
