# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
String filters for compound values of attributes

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. Create E1 with A1 with compound value, including i==10 and s='test string'
# 02. GET /v2/entities?q=A1.i:10, see E1
# 03. GET /v2/entities?q=A1.i:10;A1.s:test string, see E1
#

echo "01. Create E1 with A1 with compound value, including i==10 and s='test string'"
echo "=============================================================================="
payload='{
  "id": "E1",
  "A1": {
    "value": {
      "i": 10,
      "s": "test string"
    }
  }
}'
orionCurl --url /v2/entities --payload "${payload}"
echo
echo


echo "02. GET /v2/entities?q=A1.i:10, see E1"
echo "======================================"
orionCurl --url '/v2/entities?q=A1.i:10'
echo
echo


echo "03. GET /v2/entities?q=A1.i:10;A1.s:test string, see E1"
echo "======================================================="
orionCurl --url '/v2/entities?q=A1.i:10;A1.s:test string'
echo
echo


--REGEXPECT--
01. Create E1 with A1 with compound value, including i==10 and s='test string'
==============================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=none
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/entities?q=A1.i:10, see E1
======================================
HTTP/1.1 200 OK
Content-Length: 97
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "A1": {
            "metadata": {},
            "type": "none",
            "value": {
                "i": 10,
                "s": "test string"
            }
        },
        "id": "E1",
        "type": "none"
    }
]


03. GET /v2/entities?q=A1.i:10;A1.s:test string, see E1
=======================================================
HTTP/1.1 400 Bad Request
Content-Length: 97
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "A1": {
            "metadata": {},
            "type": "none",
            "value": {
                "i": 10,
                "s": "test string"
            }
        },
        "id": "E1",
        "type": "none"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
