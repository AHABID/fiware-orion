# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Forbidden characters in Input
--SHELL-INIT--

dbInit CB
brokerStart CB 0-255

--SHELL--

#
# Forbidden chars: < > " ' = ; ( )
#
# 01. XML:  Intent to register an entity with '<' as part of entity::id
# 02. XML:  Intent to discover an entity with '>' as part of entity::type
# 03. XML:  Intent to register an entity with '=' as part of providingApplication
# 04. XML:  Intent to ngsi9-subscribe to an entity with "'" as part of an attribute::name
# 05. XML:  Intent to query an entity with  ';' as part of a scopeType
# 06. XML:  Intent to update an entity with '(' as part of contextAttribute::type
# 07: XML:  Intent to update subscribe to an entity with ')' as part of reference
# 08. JSON: Intent to register an entity with '<' as part of entity::id
# 09. JSON: Intent to discover an entity with '>' as part of entity::type
# 10. JSON: Intent to register an entity with '=' as part of providingApplication
# 11. JSON: Intent to ngsi9-subscribe to an entity with "'" as part of an attribute::name
# 12. JSON: Intent to query an entity with  ';' as part of a scopeType
# 13. JSON: Intent to update an entity with '(' as part of contextAttribute::type
# 14: JSON: Intent to update subscribe to an entity with ')' as part of reference
#


echo "01. XML:  Intent to register an entity with '<' as part of entity::id"
echo "====================================================================="
payload='<?xml version="1.0" encoding="UTF-8"?>
<registerContextRequest>
  <contextRegistrationList>
    <contextRegistration>
      <entityIdList>
        <entityId type="Room" isPattern="false">
          <id>Conference<Room</id>
        </entityId>
      </entityIdList>
      <contextRegistrationAttributeList>
        <contextRegistrationAttribute>
          <name>temperature</name>
          <type>degree</type>
          <isDomain>false</isDomain>
        </contextRegistrationAttribute>
      </contextRegistrationAttributeList>
    </contextRegistration>
  </contextRegistrationList>
  <duration>PT1H</duration>
</registerContextRequest>'
orionCurl --url /v1/registry/registerContext --payload "${payload}"
echo
echo


echo "02. XML:  Intent to discover an entity with '>' as part of entity::type"
echo "======================================================================="
payload='<?xml version="1.0" encoding="UTF-8"?>
<discoverContextAvailabilityRequest>
  <entityIdList>
    <entityId type="Ro>om" isPattern="false">
      <id>ConferenceRoom</id>
    </entityId>
  </entityIdList>
  <attributeList>
    <attribute>temperature</attribute>
    <attribute>pressure</attribute>
  </attributeList>
</discoverContextAvailabilityRequest>'
orionCurl --url /v1/registry/discoverContextAvailability --payload "${payload}"
echo
echo


# 03. XML:  Intent to register an entity with '=' as part of providingApplication
# 04. XML:  Intent to ngsi9-subscribe to an entity with "'" as part of an attribute::name
# 05. XML:  Intent to query an entity with  ';' as part of a scopeType
# 06. XML:  Intent to update an entity with '(' as part of contextAttribute::type
# 07: XML:  Intent to update subscribe to an entity with ')' as part of reference

--REGEXPECT--
01. XML:  Intent to register an entity with '<' as part of entity::id
=====================================================================
HTTP/1.1 200 OK
Content-Length: 126
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<orionError>
  <code>400</code>
  <reasonPhrase>Bad Request</reasonPhrase>
  <details>XML Parse Error</details>
</orionError>


02. XML:  Intent to discover an entity with '>' as part of entity::type
=======================================================================
HTTP/1.1 200 OK
Content-Length: 227
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<discoverContextAvailabilityResponse>
  <errorCode>
    <code>400</code>
    <reasonPhrase>Bad Request</reasonPhrase>
    <details>Illegal value for XML attribute</details>
  </errorCode>
</discoverContextAvailabilityResponse>


--TEARDOWN--
brokerStop CB
dbInit CB
