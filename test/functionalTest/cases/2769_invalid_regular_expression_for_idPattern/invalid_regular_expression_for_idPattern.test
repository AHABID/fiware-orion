# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Invalid Regular Expression for idPattern

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create a subscription with an invalid idPattern
# 02. Make sure the subscription was not created
#

echo "01. Create a subscription with an invalid idPattern"
echo "==================================================="
payload='{
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    }
  },
  "subject": {
    "entities": [
      {
        "idPattern": "E[123"
      }
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Make sure the subscription was not created"
echo "=============================================="
orionCurl --url /v2/subscriptions
echo
echo


--REGEXPECT--
01. Create a subscription with an invalid idPattern
===================================================
HTTP/1.1 400 Bad Request
Content-Length: 74
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "Invalid regex for entity id pattern",
    "error": "BadRequest"
}


02. Make sure the subscription was not created
==============================================
HTTP/1.1 200 OK
Content-Length: 2
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[]


--TEARDOWN--
brokerStop CB
dbDrop CB
