# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Simple forwarded query in NGSIv2

--SHELL-INIT--
dbInit CB
brokerStart CB 38,186-187,235 IPV4
accumulatorStart --pretty-print

--SHELL--

#
# 01. Register entities of type T, with ID .*, and attribute A1, for the accumulator
# 02. Query entities of type T - get empty response as the accumulator doesn't respond
# 03. Dump the accumulator, see the forwarded query
# 04. Register entities of type T, with ID .*, and no attributes, for the accumulator
# 05. Query entities of type T - get empty response as the accumulator doesn't respond
# 06. Dump the accumulator, see the forwarded query
#

echo "01. Register entities of type T, with ID .*, and attribute A1, for the accumulator"
echo "=================================================================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T",
        "idPattern": ".*"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${LISTENER_PORT}'/v2"
    },
    "legacyForwarding": false
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "02. Query entities of type T - get empty response as the accumulator doesn't respond"
echo "===================================================================================="
orionCurl --url /v2/entities?type=T
echo
echo


echo "03. Dump the accumulator, see the forwarded query"
echo "================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "04. Register entities of type T, with ID .*, and no attributes, for the accumulator"
echo "==================================================================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T",
        "idPattern": ".*"
      }
    ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${LISTENER_PORT}'/v2"
    },
    "legacyForwarding": false
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "05. Query entities of type T - get empty response as the accumulator doesn't respond"
echo "===================================================================================="
orionCurl --url /v2/entities?type=T
echo
echo


echo "06. Dump the accumulator, see the forwarded query"
echo "================================================="
accumulatorDump
accumulatorReset
echo
echo


