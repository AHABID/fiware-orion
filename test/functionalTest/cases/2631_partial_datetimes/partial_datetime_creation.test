# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Support partial date time creations (only date, not time)

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Creating date time using only date
# 02. Check that it has been created corresponding to 00:00:00 that day
#

echo "01. Creating date time using only date"
echo "======================================"
payload='{
  "id": "E",
  "type": "T",
  "D01": {
    "value": "2016-10-01",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Check that it has been created corresponding to 00:00:00 that day"
echo "====================================================================="
orionCurl --url /v2/entities/E
echo
echo


--REGEXPECT--
01. Creating date time using only date
======================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Check that it has been created corresponding to 00:00:00 that day
=====================================================================
HTTP/1.1 200 OK
Content-Length: 95
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "D01": {
        "metadata": {},
        "type": "DateTime",
        "value": "2016-10-01T00:00:00.00Z"
    },
    "id": "E",
    "type": "T"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
