# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

#
#
# 1: Append entity E1 with two different attributes A1 and A2
# 2. JsonAttributeObjectQuery for the entity E1 for attributes A1 and A2
# 3. Append entity E2 with two attributes with identical names 'A3', but different meta IDs
# 4. Normal Query for the entity E2 for attribute A3 - both attributes are returned
# 5. JsonAttributeObjectQuery Query for the entity E2 for attribute A3 - only one attribute is returned
# 6. Append entity E3 with two attributes with identical names 'A4', types 'test' and WITHOUT meta IDs
# 7. JsonAttributeObjectQuery Query for the entity E3 for attribute A4 - only one attribute is returned
#
#

--NAME--
Query SEQ with attributes as JSON objects
--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "1: Append entity E1 with two different attributes A1 and A2"
url="/NGSI10/updateContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
<updateContextRequest>
  <contextElementList>
    <contextElement>
      <entityId type="Test" isPattern="false">
        <id>E1</id>
      </entityId>
      <contextAttributeList>
        <contextAttribute>
          <name>A1</name>
          <type>test</type>
          <contextValue>1</contextValue>
        </contextAttribute>
        <contextAttribute>
          <name>A2</name>
          <type>test</type>
          <contextValue>2</contextValue>
        </contextAttribute>
      </contextAttributeList>
    </contextElement>
  </contextElementList>
  <updateAction>APPEND</updateAction>
</updateContextRequest>'
orionCurl --url "$url" --payload "$payload" --out json
echo
echo

echo "2. JsonAttributeObjectQuery for the entity E1 for attributes A1 and A2"
url="/NGSI10/queryContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
<queryContextRequest>
  <entityIdList>
    <entityId type="Test" isPattern="false">
      <id>E1</id>
    </entityId>
  </entityIdList>
  <attributeList>
    <attribute>A1</attribute>
    <attribute>A2</attribute>
  </attributeList>
</queryContextRequest>'
orionCurl --url "$url" --payload "$payload" --urlParams attributesFormat=object --out json
echo
echo

echo "3. Append entity E2 with two attributes with identical names 'A3', but different meta IDs"
url="/NGSI10/updateContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
<updateContextRequest>
  <contextElementList>
    <contextElement>
      <entityId type="Test" isPattern="false">
        <id>E2</id>
      </entityId>
      <contextAttributeList>
        <contextAttribute>
          <name>A3</name>
          <type>test</type>
          <contextValue>1</contextValue>
          <metadata>
            <contextMetadata>
              <name>ID</name>
              <type>integer</type>
              <value>A3-1</value>
            </contextMetadata>
          </metadata>
        </contextAttribute>
        <contextAttribute>
          <name>A3</name>
          <type>test</type>
          <contextValue>2</contextValue>
          <metadata>
            <contextMetadata>
              <name>ID</name>
              <type>integer</type>
              <value>A3-2</value>
            </contextMetadata>
          </metadata>
        </contextAttribute>
      </contextAttributeList>
    </contextElement>
  </contextElementList>
  <updateAction>APPEND</updateAction>
</updateContextRequest>'
orionCurl --url "$url" --payload "$payload" --out json
echo
echo

echo "4. Normal Query for the entity E2 for attribute A3 - both attributes are returned"
url="/NGSI10/queryContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
<queryContextRequest>
