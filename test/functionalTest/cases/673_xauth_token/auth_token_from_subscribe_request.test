# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
X-Auth-Token From Subscribe Request

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255
accumulatorStart

--SHELL--

#
# 01. Update/Append E1/A1
# 02. Make accumulator subscribe to changes in E1/A1, using an X-Auth-Token
# 03. Check that the X-Auth-Token from the subscribe request was propagated to accumulator
#

echo "01. Update/Append E1/A1"
echo "======================="
payload='{
  "attributes" : [
    {
      "name" : "A1",
      "type" : "AT",
      "value" : "V"
    }
  ]
}'
sleep 3
orionCurl --url /v1/contextEntities/type/ET/id/E1 --payload "${payload}" --json
echo
echo


echo "02. Make accumulator subscribe to changes in E1/A1, using an X-Auth-Token"
echo "========================================================================="
payload='{
  "entities": [
    {
        "type": "ET",
        "isPattern": "false",
        "id": "E1"
    }
  ],
  "attributes": [
    "A1"
  ],
  "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
  "duration": "P1M",
  "throttling": "PT2S",
  "notifyConditions": [
    {
        "type": "ONCHANGE",
        "condValues": [
            "A1"
        ]
    }
  ]
}'
orionCurl --url /v1/subscribeContext --json --payload "${payload}" --xauthToken xauth_from_subscription
echo
echo


echo "03. Check that the X-Auth-Token from the subscribe request was propagated to accumulator"
echo "========================================================================================"
sleep 1
curl localhost:${LISTENER_PORT}/dump -s -S
echo
echo


--REGEXPECT--
01. Update/Append E1/A1
=======================
HTTP/1.1 200 OK
Content-Length: 312
Content-Type: application/json
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "attributes": [
                {
                    "name": "A1", 
                    "type": "AT", 
                    "value": ""
                }
            ], 
            "statusCode": {
                "code": "200", 
                "reasonPhrase": "OK"
            }
        }
    ], 
    "id": "E1", 
    "isPattern": "false", 
    "type": "ET"
}


02. Make accumulator subscribe to changes in E1/A1, using an X-Auth-Token
=========================================================================
HTTP/1.1 200 OK
Content-Length: 135
Content-Type: application/json
Date: REGEX(.*)

{
    "subscribeResponse": {
        "duration": "P1M", 
        "subscriptionId": "REGEX([0-9a-f]{24})",
        "throttling": "PT2S"
    }
}


03. Check that the X-Auth-Token from the subscribe request was propagated to accumulator
========================================================================================
POST http://127.0.0.1:REGEX(\d+)/notify
Content-Length: 459
X-Auth-Token: xauth_from_subscription
User-Agent: orion/REGEX(\d+\.\d+\.\d+.*)
Host: 127.0.0.1:REGEX(\d+)
Accept: application/xml, application/json
Content-Type: application/json

{
  "subscriptionId" : "REGEX([0-9a-f]{24})"
  "originator" : "localhost",
  "contextResponses" : [
    {
      "contextElement" : {
        "type" : "ET",
        "isPattern" : "false",
        "id" : "E1",
        "attributes" : [
          {
            "name" : "A1",
            "type" : "AT",
            "value" : "V"
          }
        ]
      },
      "statusCode" : {
        "code" : "200",
        "reasonPhrase" : "OK"
      }
    }
  ]
}
=======================================


--TEARDOWN--
brokerStop CB
accumulatorStop
