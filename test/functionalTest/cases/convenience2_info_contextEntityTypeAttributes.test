# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience2 contextEntityTypeAttributes test
--SHELL-INIT--
dbInit CB
brokerStart CB 0-255 IPV4 -multiservice url
--SHELL--
echo "1. Listing of Entity Type Attributes, without tenant. Response in XML"
url="/info/contextEntityTypes/xxx/attr"
orionCurl --url "$url"
echo
echo


echo "2. Listing of Entity Type Attributes, with tenant TTT, Response in XML"
url="/TTT/info/contextEntityTypes/xxx/attr"
orionCurl --url "$url"
echo
echo


echo "3. Listing of Entity Type Attributes, without tenant. Response in JSON"
url="/info/contextEntityTypes/xxx/attr"
orionCurl --url "$url" --json
echo
echo


echo "4. Listing of Entity Type Attributes, with tenant TTT, Response in JSON"
url="/TTT/info/contextEntityTypes/xxx/attr"
orionCurl --url "$url" --json
echo
echo


--REGEXPECT--
1. Listing of Entity Type Attributes, without tenant. Response in XML
HTTP/1.1 200 OK
Content-Length: 289
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<entityTypeAttributesResponse>
  <attributesFound>4</attributesFound>
  <attributes>
    <attribute>Attribute 1</attribute>
    <attribute>Attribute 2</attribute>
    <attribute>Attribute 3</attribute>
    <attribute>Attribute 4</attribute>
  </attributes>
</entityTypeAttributesResponse>


2. Listing of Entity Type Attributes, with tenant TTT, Response in XML
HTTP/1.1 200 OK
Content-Length: 289
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<entityTypeAttributesResponse>
  <attributesFound>4</attributesFound>
  <attributes>
    <attribute>Attribute 1</attribute>
    <attribute>Attribute 2</attribute>
    <attribute>Attribute 3</attribute>
    <attribute>Attribute 4</attribute>
  </attributes>
</entityTypeAttributesResponse>


3. Listing of Entity Type Attributes, without tenant. Response in JSON
HTTP/1.1 200 OK
Content-Length: 129
Content-Type: application/json
Date: REGEX(.*)

{
    "attributes": [
        "Attribute 1", 
        "Attribute 2", 
        "Attribute 3", 
        "Attribute 4"
    ], 
    "attributesFound": "4"
}


4. Listing of Entity Type Attributes, with tenant TTT, Response in JSON
HTTP/1.1 200 OK
Content-Length: 129
Content-Type: application/json
Date: REGEX(.*)

{
    "attributes": [
        "Attribute 1", 
        "Attribute 2", 
        "Attribute 3", 
        "Attribute 4"
    ], 
    "attributesFound": "4"
}


--TEARDOWN--
brokerStop CB
