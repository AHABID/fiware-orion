# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience2 contextEntityTypeAttributes test
--SHELL-INIT--
dbInit CB
brokerStart CB 0-255 IPV4
--SHELL--


echo "1. Listing of Entity Type Attributes. Response in XML"
orionCurl --url /v1/contextTypes/EntityType
echo
echo


echo "2. Listing of Entity Type Attributes. Response in JSON"
orionCurl --url /v1/contextTypes/EntityType --json # --noPayloadCheck
echo
echo


--REGEXPECT--
1. Listing of Entity Type Attributes. Response in XML
HTTP/1.1 200 OK
Content-Length: 457
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<entityTypeAttributesResponse>
  <entityType>
    <contextAttributeList>
      <contextAttribute>
        <name>temperature</name>
        <type>celsius</type>
      </contextAttribute>
      <contextAttribute>
        <name>pressure</name>
        <type>mmHg</type>
      </contextAttribute>
    </contextAttributeList>
  </entityType>
  <statusCode>
    <code>200</code>
    <reasonPhrase>OK</reasonPhrase>
  </statusCode>
</entityTypeAttributesResponse>


2. Listing of Entity Type Attributes. Response in JSON
HTTP/1.1 200 OK
Content-Length: 269
Content-Type: application/json
Date: REGEX(.*)

{
    "EntityType": {
        "attributes": [
            {
                "name": "temperature", 
                "type": "celsius"
            }, 
            {
                "name": "pressure", 
                "type": "mmHg"
            }
        ]
    }, 
    "statusCode": {
        "code": "200", 
        "reasonPhrase": "OK"
    }
}


--TEARDOWN--
brokerStop CB
