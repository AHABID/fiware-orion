# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
CORS any origin

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255 IPV4 -enableCORS __ALL

--SHELL--
echo "01. GET Entry Points"
echo "=============================================================================="
orionCurl --url /v2 -X GET
echo
echo

echo "02. OPTIONS Entry Points"
echo "======================================================"
orionCurl --url /v2 -X OPTIONS
echo
echo

--REGEXPECT--
01. GET Entry Points
==============================================================================
HTTP/1.1 200 OK
Content-Length: 135
Access-Control-Allow-Origin: *
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "entities_url": "/v2/entities",
    "registrations_url": "/v2/registrations",
    "subscriptions_url": "/v2/subscriptions",
    "types_url": "/v2/types"
}


02. OPTIONS Entry Points
======================================================
HTTP/1.1 200 OK
Content-Length: 0
Access-Control-Max-Age: REGEX([0-9]{5})
Access-Control-Allow-Headers: REGEX(.*)
Access-Control-Allow-Origin: *
Access-Control-Allow-Methods: GET, OPTIONS
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



--TEARDOWN--
brokerStop CB
dbDrop CB
