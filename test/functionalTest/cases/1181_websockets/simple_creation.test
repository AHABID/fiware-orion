# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Entities V2 WS

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. POST /v2/entities
# 02. GET /v2/entities
#
host='ws://localhost:9010'
protocol='ngsiv2-json'

echo "01. POST /v2/entities"
echo "===================="
payloadPost='{
  "verb" : "POST",
  "url" : "/v2/entities",
  "params" : {"options" : "keyValues"},
  "payload" : {"type": "T1", "id": "E1","temp": 1}
}'

orionWS.py $host $protocol "$payloadPost"
echo
echo


echo "02. GET /v2/entities/E1"
echo "======================="
payloadGet='{
  "verb" : "GET",
  "url" : "/v2/entities/E1"
}'

orionWS.py $host $protocol "$payloadGet"
echo
echo


--REGEXPECT--
01. POST /v2/entities
====================
{
    "headers": {
        "Location": "/v2/entities/E1?type=T1", 
        "accept": "*/*", 
        "contentType": "application/json", 
        "expect": "", 
        "host": "", 
        "origin": "", 
        "servicePath": "/", 
        "tenant": "", 
        "userAgent": "orionWS/0.1", 
        "xauthToken": "", 
        "xforwardedFor": ""
    }, 
    "message": "", 
    "status": "201"
}
Connection closed


02. GET /v2/entities/E1
=======================
{
    "headers": {
        "accept": "*/*", 
        "contentType": "", 
        "expect": "", 
        "host": "", 
        "origin": "", 
        "servicePath": "/", 
        "tenant": "", 
        "userAgent": "orionWS/0.1", 
        "xauthToken": "", 
        "xforwardedFor": ""
    }, 
    "message": {
        "id": "E1", 
        "temp": {
            "metadata": {}, 
            "type": "none", 
            "value": 1
        }, 
        "type": "T1"
    }, 
    "status": "200"
}
Connection closed


--TEARDOWN--
brokerStop CB
dbDrop CB

