# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entity attribute -- Too many entities

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v1/updateContext, creating 5 entities
# 02. GET /v2/entities/E1/attrs/T1
#

echo "01. POST /v1/updateContext"
echo "=========================="
payload='{
  "contextElements": [
    {
      "id":   "E1",
      "type": "T1",
      "attributes": [
          {
              "name": "A0",
              "type": "number",
              "value": ""
          }
      ]
    },
    {
      "id":   "E1",
      "type": "T2",
      "attributes": [
          {
              "name": "A0",
              "type": "number",
              "value": "1"
          }
      ]
    },
    {
      "id":   "E1",
      "type": "T3",
      "attributes": [
          {
              "name": "A0",
              "type": "number",
              "value": "2"
          }
      ]
    },
    {
      "id":   "E1",
      "type": "T4",
      "attributes": [
          {
              "name": "A0",
              "type": "number",
              "value": "3"
          }
      ]
    },
    {
      "id":   "E1",
      "type": "T5",
      "attributes": [
          {
              "name": "A0",
              "type": "number",
              "value": "4"
          }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --json
echo
echo

echo "02. GET /v2/entities/E1/attrs/NONE"
echo "=================================="
orionCurl --url '/v2/entities/E1/attrs/NONE' --json
echo
echo

