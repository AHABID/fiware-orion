# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST /v2/entities with invalid service-path

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 05. POST /v2/entities with JSON object in metadata::value
#

echo "05. POST /v2/entities with JSON object in metadata::value"
echo "========================================================="
payload='{
  "type": "room",
  "id": "E1",
  "temperature": { "type": "AT", "value": 25, "meta": { "type": "md", "value": [ 1, 2, 3 ] } }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


--REGEXPECT--
05. POST /v2/entities with JSON object in metadata::value
=========================================================
HTTP/1.1 400 Bad Request
Content-Length: 85
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "invalid JSON type for attribute metadata value",
    "error": "ParseError"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
