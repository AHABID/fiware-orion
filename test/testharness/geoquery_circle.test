echo "3: ++++++++++++ Marid out 14 kms ++++++++"

# Query in 14 kms radius outside Madrid center
(curl localhost:${BROKER_PORT}/NGSI10/queryContext -s -S --header 'Content-Type: application/xml' -d @- | xmllint --format -) <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<queryContextRequest>
  <entityIdList>
        <entityId type="City" isPattern="true">
          <id>.*</id>
        </entityId>
  </entityIdList>
  <attributeList>
  </attributeList>
  <restriction>
    <scope>
      <operationScope>
        <scopeType>FIWARE_Location</scopeType>
        <scopeValue>
          <circle>
            <center_latitude>40.418889</center_latitude>
            <center_longitude>-3.691944</center_longitude>
            <radius>14000</radius>
            <inverted>true</inverted>
          </circle>
        </scopeValue>
      </operationScope>
    </scope>
  </restriction>
</queryContextRequest>
EOF
