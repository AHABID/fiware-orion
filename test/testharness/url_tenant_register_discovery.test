# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
URL-Tenant registration and discovery
--SHELL-INIT--
source harnessFunctions.sh

dbInit CB
dbTenantInit ${BROKER_DATABASE_NAME}-t_01
dbTenantInit ${BROKER_DATABASE_NAME}-t_02
brokerStart CB 0-255 IPV4 -multiservice url

--SHELL--
source harnessFunctions.sh

echo "1. Register entity E with URL-Tenant t_01"
echo "+++++++++++++++++++++++++++++++++++++++++++++++"
url="/t_01/NGSI9/registerContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
  <registerContextRequest>
    <contextRegistrationList>
      <contextRegistration>
        <entityIdList>
          <entityId type="Test" isPattern="false">
            <id>E</id>
          </entityId>
        </entityIdList>
        <contextRegistrationAttributeList>
          <contextRegistrationAttribute>
            <name>temperature01</name>
            <type>degree</type>
            <isDomain>false</isDomain>
          </contextRegistrationAttribute>
        </contextRegistrationAttributeList>
        <providingApplication>http://localhost:1028/application</providingApplication>
      </contextRegistration>
    </contextRegistrationList>
    <duration>PT1H</duration>
    <registrationId></registrationId>
  </registerContextRequest>'
curlXml ${url} "${payload}"
echo
echo


echo "2. Register entity E with URL-Tenant t_02"
echo "+++++++++++++++++++++++++++++++++++++++++++++++"
url="/t_02/NGSI9/registerContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
