echo "3. Discover entity E with URL-Tenant t_01"
echo "++++++++++++++++++++++++++++++++++++++++++++"
url="/t_01/ngsi9/discoverContextAvailability"
payload='<?xml version="1.0" encoding="UTF-8"?>
<discoverContextAvailabilityRequest>
