# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Individual Context Entity - GET OK

--SHELL-INIT--
source harnessFunctions.sh

dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. create an entity +++++"
(curl localhost:${BROKER_PORT}/NGSI10/contextEntities/entity01 -s -S --header 'Content-Type: application/xml' -X POST -d @- | xmllint --format - ) << EOF
<?xml version="1.0" encoding="UTF-8"?>
<appendContextElementRequest>
  <attributeDomainName></attributeDomainName>
  <contextAttributeList>
    <contextAttribute>
      <name>temperature</name>
      <type>degree</type>
      <contextValue>10</contextValue>
    </contextAttribute>
  </contextAttributeList>
</appendContextElementRequest>
EOF

echo "+++++ 2. lookup the entity +++++"
(curl localhost:${BROKER_PORT}/NGSI10/contextEntities/entity01/attributes -s -S --header 'Content-Type: application/xml' -X GET | xmllint --format - )

--REGEXPECT--
+++++ 1. create an entity +++++
<?xml version="1.0"?>
<appendContextElementResponse>
  <contextResponseList>
    <contextAttributeResponse>
      <contextAttributeList>
        <contextAttribute>
          <name>temperature</name>
          <type>degree</type>
          <contextValue/>
        </contextAttribute>
      </contextAttributeList>
      <statusCode>
        <code>200</code>
        <reasonPhrase>OK</reasonPhrase>
      </statusCode>
    </contextAttributeResponse>
  </contextResponseList>
</appendContextElementResponse>
+++++ 2. lookup the entity +++++
<?xml version="1.0"?>
<contextElementResponse>
  <contextElement>
    <entityId type="" isPattern="false">
      <id>entity01</id>
    </entityId>
    <contextAttributeList>
      <contextAttribute>
        <name>temperature</name>
        <type>degree</type>
        <contextValue>10</contextValue>
      </contextAttribute>
    </contextAttributeList>
  </contextElement>
  <statusCode>
    <code>200</code>
    <reasonPhrase>OK</reasonPhrase>
  </statusCode>
</contextElementResponse>
--TEARDOWN--
source harnessFunctions.sh
brokerStop CB
