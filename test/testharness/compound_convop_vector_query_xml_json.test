# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Create and query compound vector XML-JSON
--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "1: +++++++++ create vector compound +++++++++++"
(curl localhost:${BROKER_PORT}/NGSI10/contextEntities/EVector -s -S --header 'Content-Type: application/xml' -X POST -d @- | xmllint --format - ) << EOF
<?xml version="1.0" encoding="UTF-8"?>
<appendContextElementRequest>
  <contextAttributeList>
    <contextAttribute>
      <name>att</name>
      <type>compound</type>
      <contextValue type="vector">
         <item>22</item>
         <item>
           <x type="vector">
             <item>x1</item>
             <item>x2</item>
           </x>
           <y>3</y>
         </item>
         <item type="vector">
           <item>z1</item>
           <item>z2</item>
         </item>
      </contextValue>
    </contextAttribute>
  </contextAttributeList>
</appendContextElementRequest>
EOF

echo "5: ++++++++++ query for vector compound in JSON ++++++++++"
(curl localhost:${BROKER_PORT}/NGSI10/queryContext -s -S --header 'Content-Type: application/json' --header 'Accept: application/json' -d @- | python -mjson.tool) <<EOF
{
    "entities": [
        {
            "type": "",
            "isPattern": "false",
            "id": "EVector"
        }
    ]
}
EOF

--REGEXPECT--
1: +++++++++ create vector compound +++++++++++
<?xml version="1.0"?>
<appendContextElementResponse>
  <contextResponseList>
    <contextAttributeResponse>
      <contextAttributeList>
        <contextAttribute>
          <name>att</name>
          <type>compound</type>
          <contextValue/>
        </contextAttribute>
      </contextAttributeList>
      <statusCode>
        <code>200</code>
        <reasonPhrase>OK</reasonPhrase>
      </statusCode>
    </contextAttributeResponse>
  </contextResponseList>
</appendContextElementResponse>
5: ++++++++++ query for vector compound in JSON ++++++++++
{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "att",
                        "type": "compound",
                        "value": [
                            "22",
                            {
                                "x": [
                                    "x1",
                                    "x2"
                                ],
                                "y": "3"
                            },
                            [
                                "z1",
                                "z2"
                            ]
                        ]
                    }
                ],
                "id": "EVector",
                "isPattern": "false",
                "type": ""
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}
--TEARDOWN--
brokerStop CB
