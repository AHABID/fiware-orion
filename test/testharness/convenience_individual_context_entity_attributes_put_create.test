# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Individual Context Entity - PUT CREATE

--SHELL-INIT--
source harnessFunctions.sh

dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. put an entity +++++"
(curl localhost:${BROKER_PORT}/NGSI10/contextEntities/entity01/attributes -s -S --header 'Content-Type: application/xml' -X PUT -d @- | xmllint --format - ) << EOF
<?xml version="1.0" encoding="UTF-8"?>
<updateContextElementRequest>
  <attributeDomainName></attributeDomainName>
  <contextAttributeList>
    <contextAttribute>
      <name>A1</name>
      <type>degree</type>
      <contextValue>1</contextValue>
    </contextAttribute>
  </contextAttributeList>
</updateContextElementRequest>
EOF

echo "+++++ 2. post an entity +++++"
(curl localhost:{$BROKER_PORT}/ngsi10/contextEntities/entity01/attributes --header "Content-Type: application/xml" -X POST -d @- | xmllint --format -) << EOF
<appendContextElementRequest>
  <attributeDomainName></attributeDomainName>
  <contextAttributeList>
    <contextAttribute>
      <name>A1</name>
      <type>degree</type>
      <contextValue>2</contextValue>
    </contextAttribute>
  </contextAttributeList>
</appendContextElementRequest>
EOF

echo "+++++ 3. put an entity +++++"
(curl localhost:${BROKER_PORT}/NGSI10/contextEntities/entity01/attributes -s -S --header 'Content-Type: application/xml' -X PUT -d @- | xmllint --format - ) << EOF
<?xml version="1.0" encoding="UTF-8"?>
<updateContextElementRequest>
  <attributeDomainName></attributeDomainName>
  <contextAttributeList>
    <contextAttribute>
      <name>A1</name>
      <type>degree</type>
      <contextValue>3</contextValue>
    </contextAttribute>
  </contextAttributeList>
</updateContextElementRequest>
EOF

echo "+++++ 4. done +++++"

--REGEXPECT--
+++++ 1. put an entity +++++
<?xml version="1.0"?>
<updateContextElementResponse>
  <contextResponseList>
    <contextAttributeResponse>
      <statusCode>
        <code>404</code>
        <reasonPhrase>No context element found</reasonPhrase>
        <details>entity01</details>
      </statusCode>
    </contextAttributeResponse>
  </contextResponseList>
</updateContextElementResponse>
+++++ 2. post an entity +++++
<?xml version="1.0"?>
<appendContextElementResponse>
  <contextResponseList>
    <contextAttributeResponse>
      <contextAttributeList>
        <contextAttribute>
          <name>A1</name>
          <type>degree</type>
          <contextValue/>
        </contextAttribute>
      </contextAttributeList>
      <statusCode>
        <code>200</code>
        <reasonPhrase>OK</reasonPhrase>
      </statusCode>
    </contextAttributeResponse>
  </contextResponseList>
</appendContextElementResponse>
+++++ 3. put an entity +++++
<?xml version="1.0"?>
<updateContextElementResponse>
  <contextResponseList>
    <contextAttributeResponse>
      <contextAttributeList>
        <contextAttribute>
          <name>A1</name>
          <type>degree</type>
          <contextValue/>
        </contextAttribute>
      </contextAttributeList>
      <statusCode>
        <code>200</code>
        <reasonPhrase>OK</reasonPhrase>
      </statusCode>
    </contextAttributeResponse>
  </contextResponseList>
</updateContextElementResponse>
+++++ 4. done +++++
--TEARDOWN--
source harnessFunctions.sh
brokerStop CB
