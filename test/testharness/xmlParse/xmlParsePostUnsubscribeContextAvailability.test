# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
XML Parse Post UnsubscribeContextAvailability
--SHELL-INIT--
source ../harnessFunctions.sh

dbInit CB
brokerStart CB

--SHELL--
source ../harnessFunctions.sh

url="/NGSI9/unsubscribeContextAvailability"
payload="<?xml version=\"1.0\" encoding=\"UTF-8\"?>
<unsubscribeContextAvailabilityRequest>
  <subscriptionId>012345678901234567890123</subscriptionId>
</unsubscribeContextAvailabilityRequest>"
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept: application/xml"

echo "2: ***********************************"
--REGEXPECT--
HTTP/1.1 200 OK
Content-Length: 251
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<unsubscribeContextAvailabilityResponse>
  <subscriptionId>012345678901234567890123</subscriptionId>
  <statusCode>
    <code>404</code>
    <reasonPhrase>Subscription Not Found</reasonPhrase>
  </statusCode>
</unsubscribeContextAvailabilityResponse>
--TEARDOWN--
source ../harnessFunctions.sh
brokerStop CB